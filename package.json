{
  "name": "ai-chat",
  "version": "2.0.0",
  "description": "Конфигурируемый ИИ-бот с поддержкой нескольких провайдеров (OpenRouter, Google AI).",
  "main": "index.js",
  "author": "I_Sahorok/merka",
  "dependencies": {
    "google-ai-kit": "^1.0.4",
    "openrouter-kit": "^0.1.65"
  },
  "botpanel": {
    "categories": [
      "Чат"
    ],
    "icon": "brain-circuit",
    "dependencies": {
      "parser-keksik": "*"
    },
    "settings": {
      "aiProviderConfig": {
        "type": "json_file",
        "label": "Конфигурация AI",
        "description": "Основной файл настроек: выбор провайдера, ключи, модели и т.д.",
        "defaultPath": "config.json"
      },
      "allowedChatTypes": {
        "type": "string[]",
        "label": "Разрешенные типы чатов",
        "description": "Типы чатов, в которых бот будет отвечать (например, clan, chat, global).",
        "default": [
          "clan",
          "chat"
        ]
      },
      "thinkingMessage": {
        "type": "string",
        "label": "Сообщение 'ИИ думает'",
        "default": "Думаю над вашим вопросом..."
      },
      "cooldownMessage": {
        "type": "string",
        "label": "Сообщение о кулдауне",
        "description": "Используйте {timeLeft} для подстановки оставшегося времени.",
        "default": "Подождите еще {timeLeft} сек."
      },
      "noPromptMessage": {
        "type": "string",
        "label": "Ответ на пустой запрос",
        "default": "Я вас слушаю. Какой у вас вопрос?"
      },
      "useHistory": {
        "type": "boolean",
        "label": "Включить историю диалога",
        "default": true
      },
      "clearBadSymbols": {
        "type": "boolean",
        "label": "Очищать ответ от эмодзи",
        "default": true
      }
    }
  }
}
